{
  "actions": [
    {
      "id": "expand_toward_region",
      "name": "Expand Toward Region",
      "target": "faction",
      "category": "territory",
      "properties": [
        { "id": "target_polity", "value": "target.polity" },
        { "id": "neighbor_regions", "value": "target_polity.accessible_neighbor_regions" },
        { "id": "rs_description", "value": "''Select region the <<target_polity>> tribe should expand to...''" },
        { "id": "selected_region", "value": "neighbor_regions.request_selection(rs_description)" }
      ],
      "accessConditions": [
        "target == target_polity.dominant_faction",
        "target_polity.type == tribe"
      ],
      "executeConditions": [
        "neighbor_regions.count > 0"
      ],
      "effects": [
        "target.trigger_decision(action_prio, tribe_decide_expand_toward_region, selected_region, 1)"
      ]
    }
  ]
}
